<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F6FAF9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:spacing="8dp">

        <!-- Input Text -->
        <EditText
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter text here"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textSize="18sp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Bold and Italic Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/toggleBoldButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bold"
                android:backgroundTint="#673AB7"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/toggleItalicButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Italic"
                android:backgroundTint="#9575CD"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Font Size SeekBar -->
        <SeekBar
            android:id="@+id/fontSizeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:max="50"
            android:progress="16" />

        <!-- Font Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/arialFontButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jaro"
                android:backgroundTint="#673AB7"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/timesFontButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Parkinsans"
                android:backgroundTint="#673AB7"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/robotoFontButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kalam"
                android:backgroundTint="#673AB7"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Analyze Button -->
        <Button
            android:id="@+id/analyzeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analyze Font"
            android:backgroundTint="#673AB7"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <!-- Output Text -->
        <TextView
            android:id="@+id/outputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font details will appear here"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
